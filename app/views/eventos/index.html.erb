<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Horário</th>
      <th>Descrição</th>
      <th>Prioridade</th>
      <th>Estado</th>
      <th>Grupo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= evento.dia %></td>
        <td><%= evento.horario.strftime("%I:%M%p") %></td>
        <td><%= evento.descricao %></td>
        <td><%= get_priority(evento.prioridade) %></td>
        <td><%= get_estado(evento.estado) %></td>
        <td><%= evento.grupo_evento.nome %></td>
        <td><%= link_to 'Show', evento %></td>
        <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
        <td><%= link_to 'Destroy', evento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

