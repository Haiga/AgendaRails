<p id="notice"><%= notice %></p>

<h1>Grupos de Eventos</h1>
<%= link_to 'Novo Grupo de Eventos', new_grupo_evento_path, class: "btn btn-primary" %>
<hr>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Prioridade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupo_eventos.each do |grupo_evento| %>
      <tr>
        <td><%= grupo_evento.nome %></td>
        <td><%= get_priority(grupo_evento.prioridade) %></td>
        <td><%= link_to 'Mostrar', grupo_evento, class: "btn btn-primary" %></td>
        <td><%= link_to 'Editar', edit_grupo_evento_path(grupo_evento), class: "btn btn-info" %></td>
        <td><%= link_to 'Apagar', grupo_evento, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


